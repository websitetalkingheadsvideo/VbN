# LOTN Character Creator - Environment Configuration
# Copy this to config.env and update with your actual settings

# Database Configuration (XAMPP)
DB_HOST=vdb5.pit.pair.com
DB_USER=root
DB_PASS=
DB_NAME=lotn_characters

# Python API Configuration
PYTHON_API_HOST=vbn.talkingheads.video
PYTHON_API_PORT=5000
PYTHON_API_URL=http://vbn.talkingheads.video/api

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# Security (for production)
SECRET_KEY=your-secret-key-here
SESSION_LIFETIME=3600

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Email Configuration (if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# AI API Keys (for Story to Location feature)
# Get your Anthropic key at: https://console.anthropic.com/
# Get your OpenAI key at: https://platform.openai.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

